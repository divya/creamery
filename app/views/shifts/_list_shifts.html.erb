<div id="list_shifts">
	<!-- <div class="small-6 columns"> -->
		<h3>Today's Shifts</h3>	
		<%# @shifts = Shift.for_store(@thisStore).for_next_days(0).chronological.paginate(page: params[:page]).per_page(5) %>
		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Employee</th>
		        <th>Start time</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @shifts.each do |shift| %>
		        <tr>
		          <td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
		          <td><%= shift.start_time.to_time.strftime("%I:%M %p") %></td>
		          <td>
		            <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
		              &nbsp;Add Jobs&nbsp;
		            <% end %>
          		  </td>
		          <td>
		            <%= link_to(edit_shift_path(shift), class: 'button tiny radius warning') do %>
		              &nbsp;Edit&nbsp;
		            <% end %>
          		  </td>
          		   <td>
				    <%= link_to(shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}, class: 'button tiny radius alert') do %>
				        &nbsp;<%= "Delete Shift" %>
				    <% end %>
          		  </td>
		        </tr>
		      <% end %>
		    </tbody>
	  </table>
	  <%#= will_paginate shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
  <!-- </div> -->

 	<div class="form-actions">
	  	<%= link_to(new_shift_path(store_id: params[:store_id]), id: 'new_shift_link', class: 'button tiny radius', remote:true) do %>
	  	<!-- <i class="fa fa-plus"></i> -->
	  		<!-- <a href="javascript:;" onclick="renderNewShiftForm()">TEST JS</a> -->
	  	&nbsp;Add Shift
		<% end %>
	</div>
</div>



