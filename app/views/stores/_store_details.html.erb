<h3>Store Details</h3>
<p>
  <h4>
    Name: <%= @store.name %>
  </h4>
</p>

<p>
  <b>Address:</b><br>
  <%= @store.street %><br />
  <%= @store.city %>, <%= @store.state %> <%= @store.zip %>
</p>

<p>
  <b>Phone:</b><br>
  <%= number_to_phone @store.phone %>
</p>

<% unless @store_flavors.empty? %>
  <p>
    <h4>
      Flavors Offered:
    </h4>
    <% @store_flavors.each do |sf| %>
      <p><%= sf.flavor.name %></p>
    <% end %>
  </p>
<% end %>


<%if logged_in? %>
  <p>
    <b>Active:</b> 
    <%= @store.active ? "Yes" : "No" %>
  </p>
<% end %>