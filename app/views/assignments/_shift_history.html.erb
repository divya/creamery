<h3>Shift History</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>

    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.date.strftime("%m/%d/%y") %></td>
    		<td><%= shift.start_time.localtime.strftime("%I:%M %p") %></td>
    		<td><%= shift.end_time.localtime.strftime("%I:%M %p") %></td>
        <td>
          <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
            &nbsp;Add Jobs&nbsp;
          <% end %>
        </td>
        <td>
          <%= link_to(edit_shift_path(shift), class: 'button tiny radius warning') do %>
            &nbsp;Edit&nbsp;
          <% end %>
        </td>
         <td>
          <%= link_to(shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}, class: 'button tiny radius alert') do %>
              &nbsp;<%= "Delete" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @shifts, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %><!-- <p>Forthcoming...</p> -->