<%= simple_nested_form_for @employee, :html => { :class => 'form-horizontal' } do |employee_form| %>
    <div class="row">
      <div class="small 6 columns">
        <fieldset>
          <legend><%= controller.action_name.capitalize %> Employee</legend>
          <%= employee_form.input :first_name, input_html: {class: "avg"} %>
          <%= employee_form.input :last_name, input_html: {class: "avg"} %>
          <%= employee_form.input :ssn, input_html: {class: "avg"} %>
          <%= employee_form.input :date_of_birth, as: :date, start_year: Date.today.year - 13, end_year: Date.today.year - 90,
                                   order: [:month, :day, :year], include_blank: true, input_html: {class: "avg"} %>
          <%= employee_form.input :phone, input_html: {class: "avg"} %>
          <%= employee_form.input :role, collection: Employee::ROLES_LIST, include_blank: true, input_html: {class: "avg"} %>
          <%= employee_form.input :active %>
        </fieldset>
      </div>

    <div class="small 6 columns">
      <legend>User for this employee</legend>
        <!-- <div id="town_attractions"> -->
          <%= employee_form.simple_fields_for :user do |user_form| %>
            <%= user_form.input :email, include_blank: true, input_html: {class: "avg"}%>
            <%= user_form.input :password, include_blank: true, input_html: {class: "avg"} %>
            <%= user_form.input :password_confirmation, include_blank: true, input_html: {class: "avg"} %>
          <% end %> 
    </div> 
  </div>
 <!--    </div> -->
    <div class="form-actions">
      <%= employee_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', employees_path, :class => 'button secondary' %>
    </div>
<% end %>