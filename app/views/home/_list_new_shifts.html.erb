<div id = "list_new_shifts">
	<div class="row">

	<div class="small-12 columns">

		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Employee</th>
		        <th>Date</th>
		        <th>Start time</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @new_shifts.each do |shift| %>
		        <tr>
		          <td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
		          <td><%= shift.date %></td>
		          <td><%= shift.start_time.strftime("%I:%M %p") %></td>
		          <td>
		            <%= link_to(edit_shift_path(shift), class: 'button tiny radius warning') do %>
		              &nbsp;Edit&nbsp;
		            <% end %>
          		  </td>
          		   <td>
				    <%= link_to(shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}, class: 'button tiny radius alert') do %>
				        &nbsp;<%= "Delete Shift" %>
				    <% end %>
          		  </td>
		        </tr>
		      <% end %>
		    </tbody>
	  </table>
	  <%#= will_paginate @future_shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
	 </div>
	</div>
</div>